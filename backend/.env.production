# Production Configuration for 247exams.com
SECRET_KEY=your-very-secure-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=247exams.com,www.247exams.com

# Database Configuration (Production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=247exams
DB_USER=postgres
DB_PASSWORD=your-production-database-password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (Production) - THIS FIXES MOBILE LOGIN
CORS_ALLOWED_ORIGINS=https://247exams.com,https://www.247exams.com,http://247exams.com,http://www.247exams.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Additional mobile-friendly settings
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@247exams.com
EMAIL_HOST_PASSWORD=your-email-password